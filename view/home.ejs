<%-include('layout/header');-%>
<div class="container">
	<div class="row">
		<div class="col-12 mt-5">
			<div class="card">
				<div class="card-header">Data Produk</div>
				<div class="card-body">
					<a href="/products/create" class="btn btn-primary mb-2 btn-sm">Tambah data</a>
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>No</th>
								<th>Nama</th>
								<th>Price</th>
								<th>Image</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							<%for(const item of data){%>
							<tr>
								<td><%=item.id_products%></td>
								<td><%=item.name_products%></td>
								<td><%=item.price_products%></td>
								<td>
									<img src="/image/<%=item.image_products%>" alt="" width="80px" height="80px"></td>
								<td class="d-flex">
									<a href="/products/<%=item.id_products%>" class="btn btn-primary btn-sm">V</a>
									<a href="/products/edit/<%=item.id_products%>" class="btn btn-warning btn-sm">E</a>
			  <form action="/products/<%=data[0].id_products%>/?_method=DELETE" method="POST">
			  	<button class="btn btn-danger btn-sm">H</button>

			  </form>
									
								</td>
							</tr>
							<%}%>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<%-include('layout/footer');-%>